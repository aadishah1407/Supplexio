<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE resources PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 Resource Definitions//EN" "http://glassfish.org/dtds/glassfish-resources_1_5.dtd">
<resources>
    <jdbc-connection-pool name="SupplexioDBPool" 
                          res-type="javax.sql.DataSource" 
                          datasource-classname="com.mysql.cj.jdbc.MysqlDataSource">
        <property name="url" value="jdbc:mysql://localhost:3306/supplexio?useSSL=false&amp;allowPublicKeyRetrieval=true&amp;serverTimezone=UTC&amp;sessionVariables=sql_mode='ANSI_QUOTES'&amp;noAccessToProcedureBodies=true&amp;useInformationSchema=true&amp;lower_case_table_names=1"/>
        <property name="user" value="root"/>
        <property name="password" value="root"/>
    </jdbc-connection-pool>
    <jdbc-resource jndi-name="jdbc/supplexioDB" pool-name="SupplexioDBPool"/>
</resources>
